	\     'position': 'tab:$',
	\     'quit-on-open': v:true,
	\   },
	\   'floating': {
	\     'position': 'floating',
	\     'open-action-strategy': 'sourceWindow',
	\   },
	\   'floatingTop': {
	\     'position': 'floating',
	\     'floating-position': 'center-top',
